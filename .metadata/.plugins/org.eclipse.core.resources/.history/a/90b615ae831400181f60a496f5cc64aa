import java.util.Random;
import java.util.ArrayList;

public class Player {
	private int playerNumber;
	private ArrayList<Integer> rolls;
	private GamePiece[] pieces;
	
	public Player(int player) {
		playerNumber = player;
		rolls = new ArrayList<Integer>();
		pieces = new GamePiece[4];
		for (int i = 0; i < 4; i++)
			pieces[i] = new GamePiece(1);
	}
	
	public int roll() {
		Random rng = new Random();
		int count = 0;
		for (int i = 0; i < 4; i++)
			if (rng.nextInt(2) == 1) count++;
		if (count == 0) {
			rolls.add(5);
			return 5;
		} else
			rolls.add(count);
		return count;
	}
	
	public int[] useRolls() {
		int[] output = new int[numRolls()];
		for (Integer i : rolls)
			output[i] = rolls.get(i);
		rolls.clear();
		return output;
	}
	
	/*
	public int useRoll(int moves) {
		int roll = rolls.get(rolls.indexOf(moves));
		rolls.remove(rolls.indexOf(moves));
		return roll;
	} */
	
	public int numRolls() {
		return rolls.size();
	}
	
	public String getRolls() {
		String output = "";
		for (int i = 0; i < numRolls() - 1; i++)
			output += rolls.get(i) + ", ";
		return output + "and " + rolls.get(numRolls() - 1);
	}
	
	public int getNumber() {
		return playerNumber;
	}
	
	public GamePiece getPiece(int index) {
		return pieces[index];
	}
}
